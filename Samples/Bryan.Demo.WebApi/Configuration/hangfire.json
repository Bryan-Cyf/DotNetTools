{
  "Hangfire": {
    //是否开启Hangfire服务
    "IsOpenServer": true,

    //是否打开控制面板
    "IsOpenDashboard": true,

    //控制面板是否只读
    "IsDashboardReadOnly": false,

    //是否开启登陆校验-- 在hangfire面板+ ·?pwd=· 参数
    "IsOpenAuthentication": true,

    //URL后缀
    "RoutePrefix": "/hangfire",

    //计划拉取间隔 -- 单位秒
    "ScheduleInterval": 15,

    //工作队列
    "Queues": [ "default", "schedule" ],

    //工作者数�?
    "WorkCount": 20,

    //登陆密码
    "Password": "123456",

    //自动删除-- 不配置默认不生效
    "AutoDeleteTaskLogDay": 7,

    //存储类型 -- 参照 StorageTypeEnum 枚举
    //可配置- Memory/PostgreSql/MySql
    "StorageType": "Memory",

    "Connection": "server=127.0.0.1;uid=root;pwd=root;database={0};Allow User Variables=True"
  }
}
